{
  "list.maxHeight": 20,
  "list.autoResize": false,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".git"
      ],
      "filetypes": [
        "go"
      ]
    },
    "lua": { 
      // https://github.com/Alloyed/lua-lsp
      //luarocks install --server=http://luarocks.org/dev lua-lsp
      "command": "lua-lsp",
      "filetypes": [
        "lua"
      ]
    }
  },
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips"
  ]
}
